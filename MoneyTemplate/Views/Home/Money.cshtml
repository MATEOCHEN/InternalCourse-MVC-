<!DOCTYPE html>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>我的記帳本</title>
<link href="http://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />

<div class="well">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                <select id="category" class="form-control" name="type">
                    <option value="" selected>請選擇</option>
                    <option value="0">支出</option>
                    <option value="1">收入</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="money" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                <input type="text" name="amount" class="form-control" id="money" placeholder="金額">
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                <input type="date" name="Date" class="form-control" id="date" placeholder="日期">
            </div>
        </div>
        <div class="form-group">
            <label for="description" id ="re"name="remark" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="description">
                </textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button style="cursor:pointer" type="submit" class="btn btn-default" onclick="RecordAccount()">送出</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            @Html.Action("ShowAccountBookDetail")
        </table>
    </div>
</div>
<hr />
<script>
    function RecordAccount() {
        $.ajax({
            url: "/Home/RecordAccount",
            type: "Post",
            data: {
                Type: $("#category").val(),
                Amount: $("#money").val(),
                Date: $("#date").val(),
                Remark: $("#description").val()
            },
            success: function (response) {
                alert(response);
            }
        });
    }
</script>
<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.1.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"></script>